<%= form_for(@expenses_sender, local: true, remote: true, url: user_expenses_sender_path(current_user), method: :put) do |f| %>
  <% if @expenses_sender.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@expenses_sender.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
        <% @expenses_sender.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="modal fade" id="senderModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Expense <%= action_name %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="edit.js.coffee">
            <div class="form-group row">
              <%= f.label :email, 'email', class: 'col-xs-3 col-form-label mr-4', style: 'width: 10%' %>
              <div class="col-xs-9">
                <%= f.text_field :email, value: current_user.expenses_sender.email, class: 'form-control', style: 'width: 60%' %>
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <%= hidden_field_tag 'expenses', @expenses_ids %>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit 'send', class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>


<% end %>
